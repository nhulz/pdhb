{# This file demonstrates using most of the index.twig template and modifying
   just a small part. See `search.twig` for an example of another approach #}

{% extends "base.twig" %}

{% block content %}
{% include "menu-mobile.twig" %}
<div class="page-container">
	<div class="page-container__inner">
		<div class="container archive-container">
			<header class="header-container">
				<a class="back-btn" href="{{site.url}}">< Back</a>
        {% if title %}<h1>{{title}}</h1>{% endif %}
			</header>
			<sidebar class="category-sidebar">
					{% for item in subcategories %}
						<h4><a class="category-title" href="{{current_cat ~ item.slug}}">{{item.name}}</a></br></h4>
					{% endfor %}
					{% for term in parent_categories %}
						{% for subterm in category_list %}
							{% if subterm.id == term.id %}
								<div class="category-container">
							        <h3><a class="category-title" href="{{term.link}}">{{term.name}}</a></h3>
								        <ul class="link-container">
								            {% for category in term.children %}
															<li><a class="post-title" href="{{category.link}}">{{category.name}}</a></li>
								            {% endfor %}
								        </ul>
											</div>
										{% endif %}
									{% endfor %}
							{% endfor %}
			</sidebar>
			<main class="post-container">
      {% for post in posts %}
			<a href="{{post.url}}">
			<div class="post__single">
				<h2 class="post-title" href="{{post.url}}">{{post.title}}</h2>
				<p class="post-attribution">By <a href="{{post.author_url}}">{{post.author_name}}</a> ‚ùñ <a href="{{post.pub_url}}">{{post.pub_name}}</a></p>
				<p>{{post.preview}}</p>
			</div>
		</a>
        {% endfor %}
			</main>
		</div>
	</div>
</div>




{% endblock %}
